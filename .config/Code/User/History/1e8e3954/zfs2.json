{
  "style_control": "user",
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "cssPriority": "user",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "control-center-width": 380,
  "control-center-height": 600,
  "notification-window-width": 380,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "relative-timestamps": true,
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "widgets": [
    "buttons-grid",
    "title",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do not disturb"
    },
   "buttons-grid": {
    "buttons-per-row": 5,
    "actions": [
      {
        "label": "",
        "type": "toggle",
        "command": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "update-command": "bash -c '[[ $(pactl get-sink-mute @DEFAULT_SINK@) == *yes* ]] && echo  || echo '"
      },
      {
        "label": "",
        "type": "toggle",
        "command": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
        "update-command": "bash -c '[[ $(pactl get-source-mute @DEFAULT_SOURCE@) == *yes* ]] && echo  || echo '"
      },
      {
        "label": "",
        "type": "toggle",
        "command": "rfkill toggle bluetooth",
        "update-command": "bash -c '[[ $(rfkill list bluetooth | grep -c \"Soft blocked: no\") -gt 0 ]] && echo  || echo '"
      },
      {
        "label": "",
        "type": "toggle",
        "command": "nmcli radio wifi toggle",
        "update-command": "bash -c '[[ $(nmcli radio wifi) == enabled ]] && echo  || echo '"
      },
      {
        "label": "",
        "command": "swaylock || hyprlock"
      }
    ]
  }, 
    "notifications": {
      "vexpand": true
    }
  }
}